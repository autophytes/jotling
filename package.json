{
	"name": "jotling",
	"productName": "Jotling",
	"description": "Word processor for authors with a focus on builidng out a knowledge base around your writing.",
	"author": "Josh",
	"version": "1.0.0",
	"homepage": "./",
	"license": "CC-BY-NC-ND-4.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/autophytes/jotling.git"
	},
	"main": "./src/main.js",
	"scripts": {
		"prod": "cross-env NODE_ENV=production webpack --mode production --config webpack.build.config.js && electron --noDevServer .",
		"start": "cross-env NODE_ENV=development webpack-dev-server --hot --host 0.0.0.0 --config=./webpack.dev.config.js --mode development",
		"build": "cross-env NODE_ENV=production webpack --config webpack.build.config.js --mode production",
		"package": "npm run build",
		"postpackage": "electron-packager ./ --out=./builds --overwrite",
		"pack": "electron-builder --dir",
		"dist": "electron-builder"
	},
	"dependencies": {
		"@babel/runtime": "^7.12.5",
		"@popperjs/core": "^2.6.0",
		"cli-truncate": "^2.1.0",
		"draft-js": "^0.11.7",
		"draftjs-utils": "^0.10.2",
		"electron-devtools-installer": "^3.1.0",
		"electron-dl": "^3.0.2",
		"electron-is-dev": "^1.2.0",
		"electron-store": "^6.0.1",
		"font-list": "^1.2.11",
		"ncp": "^2.0.0",
		"react": "^17.0.0",
		"react-beautiful-dnd": "^13.0.0",
		"react-color": "^2.19.3",
		"react-css-collapse": "^4.1.0",
		"react-dom": "^17.0.0",
		"react-image-crop": "^8.6.6",
		"react-popper": "^2.2.4",
		"sweetalert2": "^10.12.6",
		"tar": "^6.0.5",
		"uuid": "^8.3.2",
		"v8-compile-cache": "^2.2.0"
	},
	"devDependencies": {
		"@babel/core": "^7.12.10",
		"@babel/preset-react": "^7.12.10",
		"babel-loader": "^8.2.2",
		"babili-webpack-plugin": "^0.1.2",
		"cross-env": "^7.0.3",
		"css-loader": "^5.0.0",
		"electron": "^11.0.0",
		"electron-builder": "^22.9.1",
		"electron-packager": "^15.2.0",
		"eslint": "^7.16.0",
		"eslint-plugin-flowtype": "^5.2.0",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-jsx-a11y": "^6.4.1",
		"eslint-plugin-react": "^7.21.5",
		"eslint-plugin-react-hooks": "^4.2.0",
		"file-loader": "^6.2.0",
		"html-webpack-plugin": "^4.5.0",
		"mini-css-extract-plugin": "^1.0.0",
		"style-loader": "^2.0.0",
		"webpack": "^4.44.2",
		"webpack-cli": "^3.3.12",
		"webpack-dev-server": "^3.11.0",
		"worker-loader": "^3.0.7"
	},
	"build": {
		"productName": "Jotling",
		"appId": "com.electron.Jotling",
		"directories": {
			"buildResources": "backend_files/defaultProjectFiles",
			"output": "dist"
		},
		"fileAssociations": [
			{
				"ext": "jots",
				"name": "Jotling Project",
				"role": "Editor"
			}
		],
		"asar": true,
		"files": [
			"build/main.js",
			"build/",
			"backend_files/defaultProjectFiles",
			"backend_files/defaultProjectFiles/*",
			"**/*",
			"!backup-icons/*",
			"!mockup/*",
			"!node_modules/.cache/",
			"!**/*.map"
		],
		"nsis": {
			"perMachine": true,
			"oneClick": false,
			"allowElevation": true
		},
		"mac": {
			"target": "dmg",
			"category": "public.app-category.productivity"
		}
	}
}
